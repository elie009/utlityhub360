<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <!-- Remove WebDAV module to allow PUT and DELETE requests -->
      <modules runAllManagedModulesForAllRequests="false">
        <remove name="WebDAVModule" />
      </modules>
      <handlers>
        <!-- Remove WebDAV handler to prevent 403 Forbidden on PUT/DELETE -->
        <remove name="WebDAV" />
        <!-- Remove other handlers that might interfere -->
        <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
        <remove name="OPTIONSVerbHandler" />
        <remove name="TRACEVerbHandler" />
        <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <!-- Security settings to allow all HTTP methods -->
      <security>
        <requestFiltering>
          <verbs allowUnlisted="true">
            <add verb="PUT" allowed="true" />
            <add verb="DELETE" allowed="true" />
            <add verb="PATCH" allowed="true" />
            <add verb="OPTIONS" allowed="true" />
          </verbs>
        </requestFiltering>
      </security>
      <aspNetCore processPath="dotnet" arguments=".\UtilityHub360.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess">
        <environmentVariables>
          <!-- ========================================== -->
          <!-- SIMPLE DATABASE CONTROL - CHANGE ONLY ONE LINE BELOW -->
          <!-- ========================================== -->
          <!-- Option 1: Use Local Database (Development) -->
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <!-- Option 2: Use Test Database (Remote - Test Data) -->
          <!--<environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Staging" />-->
          <!-- Option 3: Use Live Database (Remote - Production Data) -->
          <!--<environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />-->
          <!-- ========================================== -->
          <environmentVariable name="ASPNETCORE_URLS" value="http://localhost:5000" />
        </environmentVariables>
      </aspNetCore>
    </system.webServer>
  </location>
</configuration>